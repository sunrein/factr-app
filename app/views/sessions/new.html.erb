<h1>Log in to Trivial</h1>

  <div class="login-form" id="input-field">
    <%= form_tag '/login' do %>
    <p>
      Username: <%=text_field_tag :username %>
    </p>
    <p>
      Password:<%=password_field_tag :password %>
    </p>
    <p class="waves-effect waves-blue btn-flat"><%= submit_tag "Submit" %></p>
    </div>
    <% end %>
